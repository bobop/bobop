- content_for :head do
  %title
    = "#{@post.title} -"
    Bobop - Freelance Ruby on Rails developer based in Manchester

.row
  .span12.content
    .row
      .span8.post
        %h1
          = @post.title
          %small= @post.date
        =raw @post.content
      .span4.list_box
        .list_content
          %h3 Twitter Feed
          #tweets
          = link_to "Follow @bobop", "https://twitter.com/bobop", :class => "twitter-follow-button"
          %script{:type => "text/javascript", :src => "//platform.twitter.com/widgets.js"}