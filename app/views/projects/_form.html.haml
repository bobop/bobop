= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field.clearfix
    = f.label :client_id
    .input= f.select :client_id, Client.all.collect {|p| [ p.name, p.id ] }, { :include_blank => true }
  .field.clearfix
    = f.label :name
    .input= f.text_field :name
  .field.clearfix
    = f.label :website
    .input= f.text_field :website
  .field.clearfix
    = f.label :logo
    .input= f.file_field :logo
  .field.clearfix
    = f.label :screenshot
    .input= f.file_field :screenshot
  .field.clearfix
    = f.label :description
    .input= f.text_area :description, :class => "span12"
  .field.clearfix
    = f.label :completed_at
    .input= f.date_select :completed_at
  .actions
    = f.submit 'Save'
