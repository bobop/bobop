.row
  .span16.content
    %p= link_to 'New Project', new_project_path if current_user
    - @projects.each do |project|
      .row
        .span10
          %h1
            = project.name
            %small= project.client ? "for #{project.client.name}" : "a Bobop original"
            
          %h2= link_to project.website, project.website
          = image_tag project.screenshot.url(:medium)
          %p=raw project.description
          %p= link_to 'Edit', edit_project_path(project) if current_user
          %p= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete if current_user
        .span6.show_logo
          = image_tag project.logo.url(:medium)
