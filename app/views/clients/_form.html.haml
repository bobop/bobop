= form_for @client do |f|
  -if @client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@client.errors.count, "error")} prohibited this client from being saved:"
      %ul
        - @client.errors.full_messages.each do |msg|
          %li= msg

  .field.clearfix
    = f.label :name
    .input= f.text_field :name
  .field.clearfix
    = f.label :website
    .input= f.text_field :website
  .field.clearfix
    = f.label :logo
    .input= f.file_field :logo
  .field.clearfix
    = f.label :description
    .input= f.text_area :description, :class => "span12"
  .actions
    = f.submit 'Save'