.row
  .span16.highlight
    .span11.offset1
      %h1 Hello, I'm Ben
      %h2 I am a Freelance Ruby on Rails developer based in Manchester
      = link_to "Available for hire", contact_path, :class => "btn danger large" 
      .social
        = link_to image_tag("twitter_newbird_white.png"), "http://twitter.com/bobop"
        = link_to image_tag("github.png"), "http://github.com/bobop"
        = link_to image_tag("linkedinlogo.png"), "http://uk.linkedin.com/in/benjgibbs"
        = link_to image_tag("facebook.png"), "http://facebook.com/bobop"
        = link_to image_tag("googleplus.png"), "https://plus.google.com/111410012808185125992/posts"
        = link_to "ben@bobop.co.uk", "mailto:ben@bobop.co.uk"
    .span3
      = image_tag "face_bobop_sm.gif"
.row
  .span6.list_box
    .list_content
      %h3 Clients
      - @clients.each do |c|
        .item
          .logo
            = link_to image_tag(c.logo.url(:thumb)), client_path(c)
          %h4 
            = link_to c.name, client_path(c)
          .small= pluralize(c.projects.size, 'project')
      %p= link_to "See all my Clients »", clients_path, :class => "btn"
  .span6.list_box
    .list_content
      %h3 Projects
      - @projects.each do |p|
        .item
          .logo
            = link_to image_tag(p.logo.url(:thumb)), project_path(p) if p.logo.present?
          %h4 
            = link_to p.name, project_path(p)
          .small= p.client ? "for #{p.client.name}" : "a Bobop original"
      %p= link_to "See all my Projects »", projects_path, :class => "btn"
  .span4.list_box
    .list_content
      %h3 Twitter Feed
      #tweets
      = link_to "Follow @bobop", "https://twitter.com/bobop", :class => "twitter-follow-button"
      %script{:type => "text/javascript", :src => "//platform.twitter.com/widgets.js"}